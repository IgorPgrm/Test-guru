
<h2>Test ID:<%= @test.id %></h2>
<p><%=@test.title %></p>

<div style="width: 50%; margin: 0 auto; text-align: center;">
<table border="1">
  <tr>
    <th>Question ID:</th>
    <th> Body: </th>
  </tr>
  <% Question.where(test_id: @test.id).each do |q|%>
  <tr>
    <td>
      <%= q.id %>
    </td>
    <td>
      <%= link_to q.body, q %>
    </td>
  </tr>
  <% end %>
</table>
</div>

<div>
  <%= link_to "Create New Question for Test #{@test.id}", new_test_question_path(@test) %>
  <%= link_to 'Create New Test', new_test_path %>
</div>