<h1>Edit <%= @test.title %></h1>

<%= form_for :tests, url: test_path(@test), method: :patch do |f| %>
  <% if @test.errors.present? %>
    <div>
      <h2><%= pluralize(@test.errors.count, 'error')%> detected:</h2>
      <ul>
        <% @test.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title, id: :test_title %>
  <br>
  <%= f.label :level %>
  <%= f.text_field :level, id: :test_level %>
  <br>
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.order(:title), :id, :title, prompt_text: 'Выберите категорию'%>
  <br>
  <%= f.label :author_id %>
  <%= f.text_field :author_id %>
  <br>
  <%= f.submit %>
<% end %>