<%= @images.inspect %>

<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <div class="card border-primary">
      <div class="card-body">
        <%= form_with model: [:admin, @achievement], url:admin_achievements_path, local: true do |f| %>
          <%= render 'shared/errors', resource: @achievement %>
          <%= f.label :name %>
          <%= f.text_field :name, id: :achievement_name, class: 'form-control' %>
          <br>
          <%= f.label :file_name %>
          <%= f.text_field :file_name, id: :achievement_image, class: 'form-control' %>
          <br>
          <%= f.label :identity %>
          <%= f.text_field :identity, id: :achievement_identity, class: 'form-control' %>
          <br>
          <%= f.label :value %>
          <%= f.text_field :value, id: :achievement_value, class: 'form-control' %>
          <br>
          <div class="dropdown">
            <%= f.collection_select :category_id, Category.order(:title), :id, :title, prompt: t('helpers.select.prompt'),
                                    class: "btn btn-secondary dropdown-toggle"%>
          </div>
          <br>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
